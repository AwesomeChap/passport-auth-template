<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                Login
            </div>
            <div class="card-body">
                <form action="/login">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <div class="text-center">
                            <a style="color:red" href="/register">Sign up for account if not registered</a>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                </form>
                <div style="text-align:center">OR</div>
            </div>
            <div class="card-footer">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a href="/auth/google"><i style="color:Tomato; margin:0rem 4rem 0rem 4rem" class="fa-3x fa fa-google"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/auth/facebook"><i style="margin:0rem 4rem 0rem 4rem" class="fa-3x fa fa-facebook"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/auth/facebook"><i style="color:Black; margin:0rem 4rem 0rem 4rem" class="fa-3x fa fa-github"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>